{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "Population Census for year 2000, grouped by age and gender",
  "data": {
    "url": "survey/data/csv/bar/grouped/bar_grouped_203_97.csv"
  },
  "mark": "bar",
  "encoding": {
    "column": {
      "field": "Ingredient",
      "type": "ordinal",
      "spacing": 5
    },
    "y": {
      "aggregate": "sum",
      "field": "Amount",
      "type": "quantitative",
      "axis": {
        "title": "Amount",
        "grid": false
      }
    },
    "x": {
      "field": "Staple",
      "type": "nominal",
      "scale": {
        "rangeStep": 12
      },
      "axis": {
        "title": ""
      }
    },
    "color": {
      "field": "Staple",
      "type": "nominal",
      "scale": {
        "range": ["#659CCA","#EA98D2"]
      }
    }
  },
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "domainWidth": 1
    }
  }
}