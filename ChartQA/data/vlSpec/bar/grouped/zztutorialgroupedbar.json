{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "Population Census for year 2000, grouped by age and gender",
  "data": {
    "url": "ChartQA/data/csv/bar/grouped/zztutorialgroupedbar.csv"
  },
  "mark": "bar",
  "encoding": {
    "column": {
      "field": "age",
      "type": "ordinal",
      "spacing": 5
    },
    "y": {
      "aggregate": "sum",
      "field": "people",
      "type": "quantitative",
      "axis": {
        "title": "Population",
        "grid": false
      }
    },
    "x": {
      "field": "gender",
      "type": "nominal",
      "scale": {
        "rangeStep": 12
      },
      "axis": {
        "title": ""
      }
    },
    "color": {
      "field": "gender",
      "type": "nominal",
      "scale": {
        "range": ["#659CCA", "#EA98D2"]
      }
    },
    "tooltip": [
      {
        "field": "age",
        "type": "ordinal",
        "title": "age"
      },
      {
        "field": "gender",
        "type": "nominal",
        "title": "gender"
      },
      {
        "field": "people",
        "type": "quantitative",
        "title": "people"
      }
    ]
  },
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "domainWidth": 1
    }
  }
}