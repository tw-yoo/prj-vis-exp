{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "Quarterly revenue, grouped by product category.",
  "data": {
    "url": "data/temp/data/bar_grouped_nominal.csv"
  },
  "mark": "bar",
  "encoding": {
    "column": {
      "field": "quarter",
      "type": "nominal",
      "spacing": 10,
      "title": "Quarter"
    },
    "y": {
      "field": "revenue",
      "type": "quantitative",
      "axis": {
        "title": "Revenue (in thousands)",
        "grid": false
      }
    },
    "x": {
      "field": "product_category",
      "type": "nominal",
      "axis": {
        "title": ""
      }
    },
    "color": {
      "field": "product_category",
      "type": "nominal",
      "scale": {
        "range": ["#4c78a8", "#f58518", "#e45756"]
      }
    }
  },
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "domainWidth": 1
    }
  }
}