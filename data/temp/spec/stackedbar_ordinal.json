{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.0.0-rc4.json",
  "data": {
    "url": "data/temp/data/stackedbar_ordinal.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "rating",
      "type": "ordinal",
      "sort": [
        "Strongly Disagree",
        "Disagree",
        "Neutral",
        "Agree",
        "Strongly Agree"
      ]
    },
    "y": {
      "field": "count",
      "type": "quantitative"
    },
    "color": {
      "field": "age_group",
      "type": "nominal"
    }
  }
}